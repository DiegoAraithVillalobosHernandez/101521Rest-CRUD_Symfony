{% extends('base.html.twig') %}

{% block title %}
    Listado de Pagos!
{% endblock %}

{% block stylesheets %} {% endblock %}
{% block body %} 
    <h1 class="text-info">Hola Pagos</h1> 
    <table class="table table-hover">
        <thead class="sticky-top table-dark">
            <tr>
                <th>#</th>
                <th>Número de cliente</th>
                <th>Número de revisión</th>
                <th>Fecha de pago</th>
                <th>Monto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for p in lista %}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{p.customernumber}}</td>
                <td>{{p.checknumber}}</td>
                <td>{{p.paymentdate.format('d/m/Y')}}</td>
                <td>{{p.amount}}</td>
                <td>
                <button type="button" class="btn btn-outline-info">Modificar</button>
                <button type="button" class="btn btn-outline-danger">Eliminar</button>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}