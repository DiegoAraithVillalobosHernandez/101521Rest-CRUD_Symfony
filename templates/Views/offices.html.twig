{% extends('base.html.twig') %}

{% block title %}
    Listado de Oficios!
{% endblock %}

{% block stylesheets %} {% endblock %}
{% block body %} 
    <h1 class="text-info">Hola Oficios</h1> 
    <table class="table table-hover">
        <thead class="sticky-top table-dark">
            <tr>
                <th>#</th>
                <th>Código de oficio</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Territorio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for o in lista %}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{o.officecode}}</td>
                <td>{{o.phone}}</td>
                <td>
                    {{o.addressline1}} {{o.addressline2}}, <br>
                    {{o.city}} {{o.state}} {{o.country}},{{o.postalcode}} 
                </td>
                <td>{{o.territory}}</td>
                <td>
                <button type="button" class="btn btn-outline-info">Modificar</button>
                <button type="button" class="btn btn-outline-danger">Eliminar</button>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}