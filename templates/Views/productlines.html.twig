{% extends('base.html.twig') %}

{% block title %}
    Listado de Linea de producto!
{% endblock %}

{% block stylesheets %} {% endblock %}
{% block body %} 
    <h1 class="text-info">Hola Linea de producto</h1> 
    <table class="table table-hover">
        <thead class="sticky-top table-dark">
            <tr>
                <th>#</th>
                <th>Línea de producto</th>
                <th>Descripción texto</th>
                <th>Descripción html</th>
                <th>Imágen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for p in lista %}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{p.productline}}</td>
                <td>{{p.textdescription}}</td>
                <td>{{p.htmldescription}}</td>
                <td>{{p.image}}</td>
                <td>
                <button type="button" class="btn btn-outline-info">Modificar</button>
                <button type="button" class="btn btn-outline-danger">Eliminar</button>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}