{% extends('base.html.twig') %}

{% block title %}
    Listado de Empleados!
{% endblock %}

{% block stylesheets %} {% endblock %}
{% block body %} 
    <h1 class="text-info">Hola Empleados</h1> 
    <table class="table table-hover">
        <thead class="sticky-top table-dark">
            <tr>
                <th>#</th>
                <th>Número</th>
                <th>Nombre</th>
                <th>Extension</th>
                <th>Email</th>
                <th>Código de oficio</th>
                <th>Supervisor</th>
                <th>Puesto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for emp in lista %}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{emp.employeenumber}}</td>
                <td>{{emp.firstname}} {{emp.lastname}}</td>
                <td>{{emp.extension}}</td>
                <td>{{emp.email}}</td>
                <td>{{emp.officecode}}</td>
                    {% if emp.reportsto == null %}
                        <td>Sin asignar</td>
                    {% else %}
                        <td>{{emp.reportsto}}</td>
                    {% endif %}
                <td>{{emp.jobtitle}}</td>
                <td>
                <button type="button" class="btn btn-outline-info">Modificar</button>
                <button type="button" class="btn btn-outline-danger">Eliminar</button>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}