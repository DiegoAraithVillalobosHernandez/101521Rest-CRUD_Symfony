{% extends('base.html.twig') %}

{% block title %}
    Listado de Ordenes!
{% endblock %}

{% block stylesheets %} {% endblock %}
{% block body %} 
    <h1 class="text-info">Hola Ordenes</h1> 
    <table class="table table-hover">
        <thead class="sticky-top table-dark">
            <tr>
                <th>#</th>
                <th>Número de orden</th>
                <th>Fecha</th>
                <th>Fecha establecida</th>
                <th>Fecha de envio</th>
                <th>Estatus</th>
                <th>Comentarios</th>
                <th>Número de cliente</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for o in lista %}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{o.ordernumber}}</td>
                <td>{{o.orderdate.format('d/m/Y')}}</td>
                <td>{{o.requireddate.format('d/m/Y')}}</td>
                     {% if o.shippeddate == null %}
                        <td>Sin asignar</td>
                    {% else %}
                        <td>{{o.shippeddate.format('d/m/Y')}}</td>
                    {% endif %}
                <td>{{o.status}}</td>
                <td>{{o.comments}}</td>
                <td>{{o.customernumber}}</td>
                <td>
                <button type="button" class="btn btn-outline-info">Modificar</button>
                <button type="button" class="btn btn-outline-danger">Eliminar</button>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}